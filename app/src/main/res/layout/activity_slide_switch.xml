<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slide_switch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simple.mvvm.SlideSwitchActivity"
    android:background="@color/cardview_dark_background">

    <RadioGroup
        android:id="@+id/ll_daily_recipe_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rb_signin"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <RadioButton
            android:id="@+id/rb_leave"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <RadioButton
            android:id="@+id/rb_unsignin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/tv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#F49A28"
        android:layout_alignLeft="@id/ll_daily_recipe_footer"
        android:layout_alignTop="@id/ll_daily_recipe_footer"
        android:clickable="false"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.simple.customView.ArcView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"/>

    </RelativeLayout>

</RelativeLayout>
